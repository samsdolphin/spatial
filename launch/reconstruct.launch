<launch>
  <node pkg="spatial" type="reconstruct" name="reconstruct" output="screen">
    <param name="data_path" type="string" value="$(find spatial)/20210407_2/"/>
  </node>

  <arg name="rviz" default="true" />
  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find spatial)/rviz_cfg/rosbag.rviz" />
  </group>
</launch>